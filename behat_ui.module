  variable_set('behat_ui_behat_config_path', $form_state['values']['behat_ui_behat_config_path']);

  $behat_bin = _behat_ui_get_behat_bin_path();
  $behat_config_path = _behat_ui_get_behat_config_path();

  // HTTP authentication.
