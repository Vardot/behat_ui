    $url = preg_replace('/([^\/])$/', "$1/", $url);
  }

  // Run tests.
  $pidfile = variable_get('behat_ui_pidfile', '');
  $pid = empty($pidfile) ? 0 : intval(trim(file_get_contents($pidfile)));
  $outfile = variable_get('behat_ui_outfile', '');

